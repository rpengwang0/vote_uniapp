page {
  background-color: #f5f5f5;
  height: 100vh;
}
.container .flex-center {
  display: flex;
  text-align: center;
  align-content: center;
  justify-content: center;
  align-items: center;
}
.container .head-bg {
  position: fixed;
  top: 0;
  width: 100%;
  height: 200rpx;
  background-image: linear-gradient(#f96770, #fc587d);
  border-radius: 0 0 20% 20%;
  z-index: -1;
}
.container .head {
  padding: 30rpx;
}
.container .head text {
  color: #fff;
  font-size: 30rpx;
  padding-left: 20rpx;
}
.container .list {
  background-color: #fff;
  border-radius: 15rpx;
  margin: 0 30rpx 30rpx 30rpx;
  box-shadow: 0 0 2px #dddddd;
}
.container .table {
  padding: 30rpx 0;
  flex-wrap: wrap;
}
.container .table .leaderboard {
  flex-basis: 20%;
  display: flex;
  align-content: center;
  justify-content: center;
}
.container .table .name {
  justify-content: flex-start;
  text-align: left;
  flex-basis: 60%;
}
.container .table .name .name-text {
  padding-left: 20rpx;
  padding-right: 10rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.container .table .vote {
  flex-basis: 20%;
}

