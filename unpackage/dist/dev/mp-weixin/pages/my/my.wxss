.container {
  background-color: #f5f5f5;
}
.tj-sction .tj-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tj-sction {
  display: flex;
  justify-content: space-around;
  align-content: center;
  background: #fff;
  border-radius: 10rpx;
}
.user-section {
  height: 480rpx;
  padding: 100rpx 30rpx 0;
  position: relative;
}
.user-section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  -webkit-filter: blur(1px);
          filter: blur(1px);
  background-color: #f96770;
}
.user-info-box {
  height: 180rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}
.user-info-box .username {
  font-size: 30rpx;
  color: #fff;
  margin-left: 20rpx;
}
.vip-card-box {
  display: flex;
  flex-direction: column;
  color: #f7d680;
  height: 240rpx;
  background: linear-gradient(rgba(249, 103, 112, 0.7), rgba(252, 88, 125, 0.8));
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
  position: relative;
  padding: 20rpx 24rpx;
}
.vip-card-box .card-bg {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.vip-card-box .tit {
  font-size: 30rpx;
  color: #fc587d;
  margin-bottom: 28rpx;
}
.vip-card-box .tit .yticon {
  color: #fc587d;
  margin-right: 16rpx;
}
.vip-card-box .e-b {
  font-size: 24rpx;
  color: #d8cba9;
  margin-top: 10rpx;
}
.cover-container {
  background-color: #f5f5f5;
  margin-top: -200rpx;
  position: relative;
  padding-bottom: 20rpx;
}
.cover-container .arc {
  position: absolute;
  left: 0;
  top: 120rpx;
  width: 100%;
  height: 36rpx;
}
.tj-sction {
  border-radius: 0;
  background-color: #f96770;
}
.tj-sction .tj-item {
  flex-direction: column;
  height: 140rpx;
  font-size: 24rpx;
  color: #fff;
}
.tj-sction .num {
  font-size: 40rpx;
  color: #fff;
  margin-bottom: 8rpx;
}
.user-list {
  margin-top: 30rpx;
  background: #fff;
  border-radius: 10rpx;
}
.user-list switch {
  -webkit-transform: scale(0.7, 0.7);
          transform: scale(0.7, 0.7);
}
.list-item {
  width: 100%;
  padding: 0rpx;
  background-color: #FFFFFF !important;
  border: initial;
  text-align: initial;
}
.list-item::after {
  border: initial;
}
.share-box {
  width: 70%;
  margin: auto;
  padding-top: 30rpx;
}
.share-button {
  background-color: #FD6A6C !important;
  color: #fff !important;
  font-size: 30rpx !important;
}

